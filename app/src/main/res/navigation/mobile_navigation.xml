<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">
    
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.utsbottomnav.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_ticket"
        android:name="com.utsbottomnav.ui.ticket.TicketFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_ticket" />

    <fragment
        android:id="@+id/navigation_about"
        android:name="com.utsbottomnav.ui.about.AboutFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.utsbottomnav.ui.account.AccountFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_account" />
</navigation>